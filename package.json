{
  "name": "White-Noise-App",
  "version": "0.0.3",
  "description": "A minimal White Noise and sound generator app made with Electron.",
  "main": "main.js",
  "scripts": {
    "start": "concurrent \"gulp\" \"electron ./app --enable-logging\" ",
    "dist": "build --mac",
    "prerelease:osx": "rm -rf release/osx && mkdirp release/osx",
    "release:osx": "cp -rv dist/*.{dmg,zip} release/osx && PACKAGE_VERSION=$(cat app/package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && echo $PACKAGE_VERSION >> ./release/osx/VERSION",
    "prerelease:win32": "rm -rf release/win32 && mkdirp release/win32",
    "release:win32": "cp -v dist/win-ia32/{RELEASES,*.nupkg,*.exe} release/win32",
    "prerelease:win64": "rm -rf release/win64 && mkdirp release/win64",
    "release:win64": "cp -v dist/win/{RELEASES,*.nupkg,*.exe} release/win64",
    "release": "npm run release:osx",
    "all": "npm start && npm run dist"
  },
  "repository": "https://github.com/newtonjd1/White-Noise-App/tree/electron-app",
  "keywords": [
    "Electron",
    "white noise",
    "ambiant",
    "noise"
  ],
  "author": "Josh Newton",
  "license": "CC0-1.0",
  "devDependencies": {
    "concurrently": "^3.4.0",
    "electron": "~1.6.2",
    "electron-builder": "^16.4.2",
    "electron-packager": "^8.6.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.1.1",
    "gulp-jaded": "^0.1.3",
    "gulp-run-electron": "^3.0.1",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-uglify": "^2.1.0",
    "gulp-useref": "^3.1.2",
    "gulp-util": "^3.0.8",
    "jquery": "^3.2.1",
    "pizzicato": "^0.6.0"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "White Noise App",
    "mac": {
      "category": "white-noise-app.audio.player",
      "target": "dmg"
    },
    "dmg": {
      "title": "White Noise App",
      "icon": "build/icon.icns"
    }
  },
  "dependencies": {
    "electron-config": "^0.2.1",
    "electron-window-state": "^4.1.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "pizzicato": "^0.6.1"
  }
}
